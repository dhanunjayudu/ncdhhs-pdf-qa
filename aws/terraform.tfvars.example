# Copy this file to terraform.tfvars and customize the values

project_name = "ncdhhs-pdf-qa"
environment  = "dev"
aws_region   = "us-east-1"
aws_profile  = "dhanu_aws"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"

# ECS Configuration
container_cpu    = 1024
container_memory = 2048
container_port   = 8000
desired_count    = 1

# Redis Configuration
redis_node_type = "cache.t3.micro"

# PDF Processing Configuration
alb_idle_timeout     = 300  # ALB timeout in seconds (5 minutes for large PDFs)
pdf_download_timeout = 180  # PDF download timeout in seconds (3 minutes)

# Bedrock AI Models Configuration
enable_bedrock_models = [
  "anthropic.claude-instant-v1",              # Primary Q&A model (fast)
  "anthropic.claude-3-haiku-20240307-v1:0",   # Backup Q&A model (higher quality)
  "amazon.titan-text-express-v1",             # Currently working model
  "amazon.titan-embed-text-v2:0"              # Text embeddings (future use)
]
